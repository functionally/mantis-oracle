cabal-version     : 2.4
name              : mantis-oracle
description       : This Cardano oracle reports structured data (namely, the `PlutuxTx.Data` type) to a transaction if the fee, as a quantity of a fungible token, is paid. It can be incorporated into other smart-contract scripts that use the oracle's value in their validation logic.
version           : 0.1.1.3
author            : Brian W Bush <code@functionally.io>
maintainer        : Brian W Bush <code@functionally.io>
copyright         : (c) 2021 Brian W Bush
license           : MIT
license-file      : LICENSE
extra-source-files: ReadMe.md
                  , transaction.png

homepage   : https://github.com/functionally/mantis-oracle/ReadMe.md
bug-reports: https://github.com/functionally/mantis-oracle/issues/

source-repository head
  type    : git
  location: https://github.com/functionally/mantis-oracle.git

library
  hs-source-dirs  : src
  exposed-modules : Mantis.Oracle
                    Mantis.Oracle.Client
                    Mantis.Oracle.Controller
                    Mantis.Oracle.Types
  build-depends   : base ^>=4.14.1.0
                  , aeson
                  , containers
                  , plutus-contract
                  , plutus-ledger
                  , plutus-tx
                  , plutus-tx-plugin
                  , text
  default-language: Haskell2010
  ghc-options     : -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise -Wall

executable mantis-oracle-test
   hs-source-dirs  : app
   main-is         : test.hs
   build-depends   : base ^>=4.14.1.0
                   , containers
                   , data-default
                   , freer-extras
                   , mantis-oracle
                   , plutus-contract
                   , plutus-ledger
                   , plutus-tx
                   , text
   default-language: Haskell2010
   ghc-options     : -Wall

executable mantis-oracle-pab
   hs-source-dirs  : app
   main-is         : pab.hs
   other-modules   : Orphans
   build-depends   : base ^>=4.14.1.0
                   , aeson
                   , freer-extras
                   , freer-simple
                   , mantis-oracle
                   , playground-common
                   , plutus-contract
                   , plutus-ledger
                   , plutus-pab
                   , plutus-tx
                   , plutus-use-cases
                   , prettyprinter
                   , text
   default-language: Haskell2010
   ghc-options     : -threaded -Wall

executable mantis-oracle-controller
   hs-source-dirs  : app
   main-is         : controller.hs
   build-depends   : base ^>=4.14.1.0
                   , bytestring
                   , regex-tdfa ^>= 1.3.1.0
                   , req ^>= 3.9.0
                   , text
                   , uuid
   default-language: Haskell2010
   ghc-options     : -Wall

executable mantis-oracle-client
   hs-source-dirs  : app
   main-is         : client.hs
   build-depends   : base ^>=4.14.1.0
                   , aeson
                   , mantis-oracle
                   , plutus-ledger
                   , req ^>= 3.9.0
                   , text
                   , uuid
   default-language: Haskell2010
   ghc-options     : -Wall
